{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\home\\LogFiles\\Application\\myapp.txt",
          "fileSizeLimitBytes": "1000000",
          "rollOnFileSizeLimit": true,
          "shared": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "SugarChat.WebApi"
    }
  },
  "MongoDb": {
    "ConnectionString": "mongodb://mongoserver",
    "DatabaseName": "SugarChatDb"
  },
  "SignalR": {
    "ServerUrl": "http://localhost:9875"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
